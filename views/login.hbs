<main id="login-page">
    {{# if messageLogin}} 
        <div class="row">
            <div class="col s4">
                <span class="badge green white-text left">{{messageLogin}}</span></br>
            </div>
        </div>
        {{/ if}}
        {{# if errorsLogin}}
        <section>
            <ul>
                {{# each errorsLogin}} 
                    <div class="row">
                        <div class="col s4">
                            <span class="badge red white-text left">{{this.msg}}</span>
                        </div>
                    </div>
                {{/ each}}
            </ul>
        </section>
        {{/ if}}
    <div class="row">
        <div class="col s6">
            <h3>Login</h3>
        </div>
    </div>
    <div class="row">
        <div class="col s6">
            <hr style="width:400px;text-align:left;margin-left:0;margin-top:-20px;margin-bottom: -20px;">
        </div>
    </div>
    <div class="row">
        <form class="col s8" method="POST" action="/login">
            <div class="row">
                <div class="input-field col s6">
                    <input id="email" type="text" class="validate" name="email">
                    <label for="email">Username/Email</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6">
                    <input id="password" type="password" class="validate" name="password">
                    <label for="password">Password</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6">
                    <img src="/images/reg-loader.gif" id="loginLoader" width="15%" height="15%" style="margin-left:80%; display:none;"/>
                    <button class="btn waves-effect waves-light right" style="margin-top:-30px;background-color:#2a4c84;" id="login-btn" type="submit" name="action">Login
                    </button>
                </div>
            </div>
        </form>
    </div>
</main>
